[Unit]
Description=mjpg-streamer

[Service]
Environment=LD_LIBRARY_PATH=/usr/lib/mjpg-streamer
ExecStart=/usr/bin/mjpg_streamer -o "output_http.so -p 8080 -n" -i "input_raspicam.so -x 960 -y 540 -quality 10 -vf -hf -roi 0.4,0.4,0.4,0.4 -ex snow"
Restart=on-failure

[Install]
WantedBy=multi-user.target
